# --- Configurações de Banco de Dados e Cache (Correção do Hostname) ---

# MySQL
DB_DRIVER=mysql
DB_HOST=saque-pix-mysql   # CORRIGIDO: Deve usar o nome do serviço MySQL
DB_PORT=3306              # Porta interna do container MySQL
DB_DATABASE=hyperf
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=

# Redis
REDIS_HOST=saque-pix-redis  # CORRIGIDO: Deve usar o nome do serviço Redis
REDIS_AUTH=(null)
REDIS_PORT=6379
REDIS_DB=0

# --- Configurações de E-mail (NOVO) ---
MAIL_HOST=saque-pix-mailhog  # NOVO: Nome do serviço MailHog no docker-compose
MAIL_PORT=1025               # NOVO: Porta SMTP interna do MailHog
MAIL_ENCRYPTION=null         # NOVO: Geralmente 'null' ou 'false' para testes com MailHog
MAIL_FROM_ADDRESS="no-reply@saquepix.com"
MAIL_FROM_NAME="Saque Pix"
MAIL_MAILER=smtp
MAIL_HOST=saque-pix-mailhog
MAIL_PORT=1025
# se usar MAIL_DRIVER em vez de MAIL_MAILER, mantenha ambos:
MAIL_DRIVER=smtp